  <div class="row">
    <div class="col-md-3 col-sm-3 form-group">
      <%= f.label :introductor %><br>
      <%= f.text_field :introductor, class:"form-control" %>
    </div>
    <div class="col-md-4 col-sm-4 form-group">
      <%= f.label :company %><br>
      <%= f.select :company, ['Standing Order', 'None Standing Order'], {}, class:"selectpicker" %>
    </div>
  </div>
