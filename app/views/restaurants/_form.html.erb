    <div class="col-md-3 col-sm-3 form-group">
      <%= f.label :kanji %><br>
      <%= f.text_field :kanji, class:"form-control" %>
    </div>
    <div class="col-md-3 col-sm-3 field">
      <%= f.label :sex %><br>
      <%= f.select :sex, ['M', 'F'], {}, class:"selectpicker" %>
