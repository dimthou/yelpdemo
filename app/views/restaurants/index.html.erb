<h1>Listing JBCC Customer Support</h1>

<table class="table table-hover table-condensed"">  
  <thead>
    <tr>
      <th>NÂº</th>
      <th>Name</th>
      <th>Kanji</th>
      <th>Sex</th>
      <th>Tel</th>
      <th>Email</th>
      <th>Introductor</th>
      <th>Company</th>
      <th>Account Name</th>
      <th>Account Number</th>
      <th>Create date</th>
      <th>Support</th>
      <th>Service</th>
      <th>Address</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>   
    <% @restaurants.each_with_index do |restaurant, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= link_to restaurant.name, restaurant, class: "btn-link" %></td>
        <td><%= restaurant.kanji %></td>
        <td><%= restaurant.sex %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.website %></td>
        <td><%= restaurant.introductor %></td>
        <td><%= restaurant.company %></td>
        <td><%= restaurant.account_name %></td>
        <td><%= restaurant.account_number %></td>
        <td><%= restaurant.created_date.strftime('%v') %></td>
        <td><%= restaurant.support %></td>
        <td><%= restaurant.service %></td>
        <td><%= restaurant.address %></td>
        <td><%= link_to edit_restaurant_path(restaurant), class: "btn-link" do %>
          <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
        </td>
        </td><td><%= link_to restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-link" do %>
          <span class="glyphicon glyphicon-trash"></span>
          <% end %>           
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

